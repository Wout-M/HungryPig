<MudImage Src="@Name.GetSymbImageURL(Mode, Amount, Left)" 
          ObjectFit="ObjectFit.ScaleDown"
          Fluid="true" 
          Alt="@(string.IsNullOrEmpty(Name) ? "Empty" : Name)" 
          Class="rounded-lg" 
          onclick="@(() => OnImageClicked.InvokeAsync(Left))" />


@code {
    [Parameter] public string Name { get; set; }
    [Parameter] public int Amount { get; set; }
    [Parameter] public bool Left { get; set; }
    [Parameter] public SymbMode Mode { get; set; }
    [Parameter] public EventCallback<bool> OnImageClicked { get; set; }
}