@page "/"

<MudText Typo="Typo.h3">StartMenu</MudText>
<MudTextField @bind-Value="Name" Label="Vul hier je naam in" Variant="Variant.Outlined"/>
<MudSelect @bind-Value="Mode" Label="Selecteer de spelversie">
    @foreach (Mode item in Enum.GetValues(typeof(Mode)))
    {
        <MudSelectItem Value="@item">@item.Description()</MudSelectItem>
    }
</MudSelect>
<MudButton OnClick="StartButtonClicked" Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large">
    Start
</MudButton>