@page "/symbgame/tutorial"

<div class="d-flex flex-column flex-grow-1 gap-4">
    <div class="d-flex flex-row flex-grow-1 gap-4">
        @if (CurrentTutorialLevel != null)
        {
             <div class="d-inline-flex pa-4 flex-grow-1 justify-center">
                <TutorialField CurrentToturialLevel="@CurrentTutorialLevel" 
                               Mode="@Mode" 
                               Left="true" 
                               SideSelected="@SideSelected"
                               @ref="TutorialFieldLeft"/>
            </div>
            <div class="d-inline-flex pa-4 flex-grow-1 justify-center">
                <TutorialField CurrentToturialLevel="@CurrentTutorialLevel" 
                               Mode="@Mode" 
                               Left="false" 
                               SideSelected="@SideSelected"
                               @ref="TutorialFieldRight"/>
            </div>
        }
    </div>
    <div class="d-flex flex-row flex-grow-1 gap-4 justify-center">
        @if (@NextAllowed)
        {
            <MudButton OnClick="@NextClicked" Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large">
                Volgende
            </MudButton>
        }
    </div> 
</div>