@page "/symbgame/game"

<div class="d-flex flex-column flex-grow-1 gap-4">
    <div class="d-flex flex-row flex-grow-1 gap-4">
        @if (CurrentLevel != null)
        {
             <div class="d-inline-flex pa-4 flex-grow-1 justify-center">
                <GameField CurrentLevel="@CurrentLevel"
                            Mode="@Mode" 
                            Left="true" 
                            SideSelected="@SideSelected"
                            @ref="GameFieldLeft"/>
            </div>
            <div class="d-inline-flex pa-4 flex-grow-1 justify-center">
                <GameField CurrentLevel="@CurrentLevel"
                            Mode="@Mode" 
                            Left="false" 
                            SideSelected="@SideSelected"
                            @ref="GameFieldRight"/>
            </div>
        }
       
    </div>
    <div class="d-flex flex-row flex-grow-1 gap-4 justify-center">
        @if (@NextAllowed)
        {
            <MudButton OnClick="@NextClicked" Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large" Disabled="@(!LevelFinished)">
                Volgende
            </MudButton>
        }
    </div> 
</div>