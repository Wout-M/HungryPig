@page "/dotgame"

<div class="d-flex flex-row flex-grow-1 gap-4 pa-4 justify-center">
    <MudCard Outlined="true" Class="border-solid border-2 mud-border-dark pa-3">
        <MudCardContent>
            <MudText Typo="Typo.h4" Align="Align.Center" Class="mb-3">Dot Enumeration</MudText>
            <MudTextField @bind-Value="Name" Label="Vul hier je naam in" Variant="Variant.Outlined" />
        </MudCardContent>
        <MudCardActions>
            <MudButton OnClick="StartButtonClicked" Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large" Class="mx-auto">
                Start
            </MudButton>
        </MudCardActions>
    </MudCard>
</div>