@page "/dotgame/tutorial"

<MudGrid>
    <MudItem sm="2"></MudItem>
    <MudItem sm="8">
        <div class="d-flex flex-column flex-grow-1 gap-4">
            <div class="d-flex flex-row flex-grow-1 gap-4 justify-center" style="@($"visibility: {(NextAllowed ? "visible" : "hidden")}")">
                <MudButton OnClick="@NextClicked" Color="Color.Primary" Variant="Variant.Filled" Size="Size.Large">
                    Volgende
                </MudButton>
            </div>
            <div class="d-flex flex-row flex-grow-1 gap-4 justify-center">
                @if (CurrentTutorialLevel != null)
                {
                    <DotGameField CurrentLevel="CurrentTutorialLevel"
                                  SideSelected="@SideSelected" 
                                  @ref="TutorialField"/>
                }
            </div>
        </div>
    </MudItem>
    <MudItem sm="2">
        <DotSideTip ImageURL="@ImageURL" @ref="DotSideTip" />
    </MudItem>
</MudGrid>
